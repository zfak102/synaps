<% provide(:title, 'New Data') %>
<h1>Add Data</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:datafile, url: datafiles_path) do |f| %>
      <%= render 'shared/dataerror_messages', object: f.object %>

      <%= f.label :Field1 %>
      <%= f.text_field :Info1 %>

      <%= f.label :Field2 %>
      <%= f.text_field :Info2 %>

      <%= f.label :Category %>
      <%= f.select :Category, [['Movie', 1],['Book', 2],['Song', 3],['Other', 4]] %>

      <%= f.submit "Create new data", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

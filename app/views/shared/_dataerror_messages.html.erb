<!-- error normally relates to the file being entered no the errors function -->
<% if @datafiles.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(@datafiles.errors.count, "error") %>.
    </div>
    <ul>
    <% @datafiles.errors.full_messages.each do |msg| %>
      <li>* <%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
